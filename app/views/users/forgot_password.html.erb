<div class="content">
	<div class="content_back">
		<% if flash[:notice] %><p class="flash"><%= flash[:notice] %></p><% end %>
		<div class="round_box">
			<div class="login_tab">
				<div style="display: block;" class="sign_up_box" id="tabOne">
				<b>Enter your e-mail below, we will send you a temporary password</b>
				<div class="register_form">
					<%= form_tag  ({ :action => 'forgot_password' }, { :id => 'password_form' }) %>
					<div class="field">
						<label>E-mail</label>
						<%= text_field_tag 'email_address', "", :id => "email" %>
					</div>
				</div>
				<div class="flash_messages">
					<div style="float:left;color:red;width:100%;margin-left:10px;"><%= flash[:error] %></div>
					<%= flash[:error] = "" %>
				</div>
				<div class="sign_up_button"><%= submit_tag 'Submit' %></div>
				</div>  
			</div>
		</div>
	</div>
</div>

