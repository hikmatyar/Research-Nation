<div class="content">
<div class="content_back">
<div class="round_box">
<div class="login_tab">
<div style="display: block;" class="sign_up_box" id="tabOne">
<b>Enter your e-mail below, we will send you a temporary password</b>
<div class="register_form">
<%= form_tag  ({ :action => 'forgot_password' }, { :id => 'password_form' }) %>
<div class="field">
<label>E-mail</label>
<%= text_field_tag 'email', "", :id => "email" %>
</div>
</div>
<div class="flash_messages">
<div style="float:left;color:green;width:100%;margin-left:10px;"><%= flash[:success]%></div>
<div style="float:left;color:red;width:100%;margin-left:10px;"><%= flash[:error]%></div>
</div>
<div class="sign_up_button"><%= submit_tag 'Send Me Email' %></div>
</div>  
</div>
</div>
</div>
</div>
<script type="text/javascript" language="javascript" charset="utf-8">

$(document).ready(function(){
var email_validation = new LiveValidation('email');
email_validation.add( Validate.Presence );
email_validation.add( Validate.Email );
});

</script>
