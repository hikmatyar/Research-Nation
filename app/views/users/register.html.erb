<%= error_messages_for :user %>
<div class="wrapper" id="page">
	<div id="narrowPage">
		<div class="sideBar">
		  <div id="currentUserSignIn" class="panel">
        <p>Already registered? <br><%= link_to 'Click here to sign in.', :controller => "users", :action => "login" %></p>
      </div>
    </div>
    <h1>Register</h1>
    <% form_for(@user, :url => {:controller => "users", :action => "create"}) do |f| %>
	    <div class="input text">
        <label for="user_name">Name</label>
        <label style="display: inline;" class="firstName overlay" for="user_first_name">First Name</label>
        <%= f.text_field 'first_name', :class => "firstName overlay" %>
	      <label style="display: inline;" class="lastName overlay" for="user_last_name">Last Name</label>
        <%= f.text_field 'last_name', :class => "lastName overlay" %>
      </div>
	    <div class="input text">
        <label for="user_company">Company (optional)</label>
        <%= f.text_field 'company' %>
      </div>
	    <div class="input text">
        <label for="user_email">E-mail Address</label>
        <%= f.text_field 'email' %>
      </div>
      <div class="input text">
        <label for="skype_name">Skype Name</label>
        <%= f.text_field 'skype_name' %>
      </div>
	    <% unless (@user_type == "facebook_user") %>
	      <div class="input password">
          <label for="user_password">Choose a Password</label>
		      <%= f.password_field 'password', :value => "" %>
        </div>
      <% else %>
  		    <%= f.hidden_field 'password', :value => @user_type %>
      <% end %>
      <div class="input text">
        <label for="linkedin_profile">Linked Public Profile Url</label>
		    <%= f.text_field 'linked_in_profile' %>
      </div>
      <div class="hidden text">
        <%= f.hidden_field 'facebook_uid' %>
      </div>
	    <div class="login_buttons">
	      <%= f.submit 'Register', :class => "submit_login" %>
    <% end %>
    <% unless (@user_type == "facebook_user") %>
		    <%= link_to (image_tag "/images/FB_login_short.gif"), { :controller => "users", :action => "facebook_connect"} , :class => 'fbconnect' %>
    <% end %>
    </div>
	</div>
  <div style="clear: both;"></div>
</div>