<% unless resources.blank? %>
<div class="users_table">
	<table border="0" cellspacing="5" cellpadding="5" id=" resources_table" align="left">
	<tbody>
		<tr>
			<th width="60">Title</th>
			<th width="60">Price</th>
			<th width="40">Date</th>
			<th width="60">Total</th>
		</tr>
		<% resources.each do |resource|%>
		  <tr>
        <td width="150"><%= resource.is_deleted? ? resource.title : (link_to ( truncate(resource.title, :omission => "...", :length => 25), { :controller => 'resources', :action => 'edit', :url_slug => resource.url_slug}, { :class => 'fixed' } ))  %></td>
        <td width="85"><span class="fixed">$<%= resource.selling_price %></span></td>
        <td width="85"><span class="fixed"><%= resource.created_at.strftime("%B %d") %></span></td>
        <td width="85"><span class="fixed"><%= resource.total_orders.count %></span></td>
        <% unless resource.is_deleted? %>
          <td width="85" class="user_profile_buttons"><%= link_to (( image_tag "delete.jpg"), { :controller => 'resources', :action => 'delete', :url_slug => resource.url_slug, :request => "user" }, :confirm => "Are you sure you want to delete this post?" )%></td>
        <% else %>
          <td width="85">Deleted</td>
        <% end %>
		    </td>
		  </tr>
		<% end %>
	<tbody>
</table>
</div>
<% end %>
