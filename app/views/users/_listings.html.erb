<div class="users_table">
	<table border="0" cellspacing="5" cellpadding="5" id=" posts_table" align="left">
	<tbody>
		<% resources.each_with_index do |post, index|%>
		  <tr>
        <td width="150"><%= link_to ( truncate(post.title, :omission => "...", :length => 25), { :controller => 'resources', :action => 'edit', :id => post.url_slug}, { :class => 'fixed' } )  %></td>
        <td width="85"><span class="fixed">$<%= post.selling_price %></span></td>
        <td width="85"><span class="fixed"><%= post.created_at.strftime("%B %d") %></span></td>
        <td width="85" class="user_profile_buttons"><%= link_to (( image_tag "delete.jpg"), { :controller => 'resources', :action => 'delete', :id => post.url_slug, :request => "user" }, :confirm => "Are you sure you want to delete this post?" )  %>
		    </td>
		  </tr>
		<% end %>
	<tbody>
</table>
</div>


