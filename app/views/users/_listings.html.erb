<% unless resources.blank? %>
  <div class="earnings_title">
    <table border="0" cellspacing="5" cellpadding="5" id=" resources_table" align="left">
	    <tbody>
		    <tr>
			    <th width="230">Title</th>
      		<th width="40">Price</th>
	    		<th width="54">Date</th>
	    		<th width="80">No. Sold</th>
	    	</tr>
	    <tbody>
	  </table>
	</div>
	<div class="profile_fixed_box" style="max-height:300px;">
	  <table border="0" cellspacing="5" cellpadding="5" id=" resources_table" align="left">
	    <tbody>
		  <% resources.each do |resource|%>
		    <tr>
          <td width="250"><%= resource.is_deleted? ? truncate(resource.title, :omission => "...", :length => 30) : (link_to ( truncate(resource.title, :omission => "...", :length => 50), { :controller => 'resources', :action => 'seller_page', :url_slug => resource.url_slug}, { :class => 'fixed' } ))  %></td>
          <td width="50"><span class="fixed">$<%= resource.selling_price %></span></td>
          <td width="85"><span class="fixed"><%= resource.created_at.strftime("%B %d") %></span></td>
          <td width="50"><span class="fixed"><%= resource.total_orders.count %></span></td>
          <td width="100" class="user_profile_buttons"><%= link_to (( image_tag "edit.jpg"), { :controller => 'resources', :action => 'edit', :url_slug => resource.url_slug})%></td>
          <% unless resource.is_deleted? %>
            <td width="100" class="user_profile_buttons"><%= link_to (( image_tag "delete.jpg"), { :controller => 'resources', :action => 'delete', :url_slug => resource.url_slug, :request => "user" }, :confirm => "Are you sure you want to delete this post?" )%></td>
          <% else %>
            <td width="100">Deleted</td>
          <% end %>
		      </td>
		    </tr>
		  <% end %>
	  <tbody>
  </table>
</div>
</div>
<% else %>
<i class="italicized_text">You haven't created any posts yet. Get started now by clicking <%= link_to "here", :controller => 'resources', :action => 'upload_docs' %>.</i>
<% end %>
