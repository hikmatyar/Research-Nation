<%= form_tag :controller => "users", :action => "subscribe_newsletter" %>
	<div class="field">
		<label>Name</label>
		<%= text_field 'user', 'name' %>
	</div>
	<div class="field">
		<label>Email</label>
		<%= text_field 'user', 'email', :value => "#{params[:email]}" %>
	</div>
	<div class="sign_up_button"><%= submit_tag 'Subscribe' %></div>

