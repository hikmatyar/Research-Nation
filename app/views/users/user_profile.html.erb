<div class="register_form">
<h2>Edit User Details Here</h2>
<% form_for(@user , :url => {:controller => "users", :action => "update", :id => @user.id } ) do |f| %>
		<div class="field">
			<label>Frist Name</label>
			<%= f.text_field 'first_name', :id => "first_name" %>
		</div>
		<div class="field">
			<label>Last Name</label>
			<%= f.text_field 'last_name', :id => "last_name" %>
		</div>
		<div class="field">
			<label>E-mail</label>
			<%= f.text_field 'email', :id => "email" %>
		</div>
		<div class="field">
			<label>Title</label>
			<%= f.text_field 'work' %>
		</div>
		<div class="field">
			<label>Company</label>
			<%= f.text_field 'company' %>
		</div>
		<div class="sign_up_button"><%= submit_tag 'Update'%></div>
		<% end %>
</div>
