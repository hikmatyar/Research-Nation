<% unless purchases.blank? %>
<div class="users_table">
	<table border="0" cellspacing="5" cellpadding="5" id=" posts_table" align="left">
  	<tbody>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Date</th>
      </tr>
      <% purchases.each do |order|%>
        <tr>
          <td width="400"><%= order.resource.title%></td>
          <td width="100">$ <%= order.resource.selling_price %></td>
          <td width="200"><%= order.created_at.strftime("%B %d") %></td>
          <td width="50" class="user_profile_buttons"><%= link_to (image_tag "download.jpg"), :controller => 'purchases', :action => 'download', :url_slug => order.resource.url_slug%></td>
        </tr>
      <% end %>
  	<tbody>
</table>
</div>
<% end %>
