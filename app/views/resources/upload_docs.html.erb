<div class="content">
	<div class="content_back">
    <div class="seller_left">
      <div class="seller_back">
        <h3>Create a Post</h3>
          <div class="looding_text">
            <img src="/images/looding_image2.jpg" />
            <%= link_to "YOUR DETAILS", :action => 'new', :user => params[:user] %>
            <b>UPLOAD & SELL DOCS</b>
            <h6>COMPLETE</h6>
          </div>
          <div class="register_form">
            <h2>Upload Your Documents</h2>
              <%= form_tag  ({ :controller => 'resources', :action => 'create_post', :user => params[:user] } , :multipart => true, :id => "upload_form" ) %>
              <div class="field">
                  <label>Title*</label>
                  <%= text_field 'resource', 'title', :class => 'required max_len', :max_length => 140 %>
              </div>
              <div class="field">
                  <label>Exec Summary</label>
                  <%= text_area 'resource', 'description', :class => 'max_len', :max_length => 1000 %>
                  <h5>1000</h5>
              </div>
              <div class="field">
                  <label>Industry*</label>
                  <%= text_field 'resource', 'industry', :class => 'required max_len', :max_length => 70 %>
              </div>
              <div class="field">
                  <label>Geography*</label>
                  <%= text_field 'resource', 'geography', :class => 'required max_len', :max_length => 70 %>
                  <div class="loading">
                    <img src="/images/loading_big.gif" alt="uploading files..." title="uploading files..." />
                  </div>
              </div>
              <div class="field">
                  <label>Price(US$)*</label>
                  <%= text_field 'resource', 'selling_price', :class => 'required valid_price' %>
              </div>
              <div class="field"><label>Attachment(s): </label></div>
              <div class="field"><label>Sample Document</label><%= file_field_tag 'sample', :class => 'file' %></div>
              <div class="field"><label>Original File*</label><%= file_field_tag 'original', :class => 'required file' %></div>
              <input type="hidden" name="original_file_name" value="" id="original_file_name" />
              <input type="hidden" name="sample_file_name" value="" id="sample_file_name" />
              <div class="field">
                <label>Sources*</label>
                <%= text_area 'resource', 'sources', :class => 'required max_len', :max_length => 3000 %>
              </div>
              <div class="field">
                <label>Terms and Conditions</label>
                <%= text_area 'resource', 'terms_and_conditions', :class => 'max_len', :max_length => 3000 %>
              </div>
            </div>
            <div class="sign_up_button"><%= submit_tag "Proceed to Next Step" %></div>
          </div>
      </div>
    <div class="seller_right">
      <div class="guidelines1">
        <div class="guidelines">
          <h2>Guidelines</h2>
          <h3>Setting a Price</h3>
          <p>How much would you pay for the research you are publishing? Think about this and set the price accordingly. If you're publishing a company brochure or marketing material, or if you're a first time publisher and want to be widely read, consider selling for free</p>
          <h3>Stating Your Sources</h3>
          <p>Please use this to describe how you obtained the information/data/insights that form the basis of the publication you are selling</p>
          <h3>Examples of Stuff You Can Sell</h3>
          <p>Not sure if you should sell/share stuff? Click here to see examples of things you can and cannot upload</p>
          <h3>Respecting Copyrights</h3>
          <p>Please don't share information that doesn't belong to you! Copyright violations are not cool</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" language="javascript" charset="utf-8">
    $(document).ready(function(){

        $(".loading").hide();
        show_text_count();
        function show_text_count(){
            var len = 700 - $('#resource_description').val().length
            $('.field h5').text(len);
        }

        $('#resource_description').keypress(function(){
           show_text_count();
        });

        $('#upload_form').submit(function(){
            validated = validate_form();
            if(validated)
            {
	          $(".loading").show();
            }
            return validated;
        });
        $("#original").change(function(){
            $("#original_file_name").val($(this).val());
        });
        $("#sample").change(function(){
            $("#sample_file_name").val($(this).val());
        });
        $('input:checkbox').click(function(){
            $(this).val($(this).attr("checked"));
        })
    });

</script>
