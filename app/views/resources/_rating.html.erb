<div class="purchase_box">
  <div class="ratings_box">
    <h4 class="box_heading">Rating</h4>
    <div class="sign_up_box">
      <% if !logged_in? || @resource.rated_by?(current_user)%>
        <%= ratings_for @resource, :static, :remote_options => {:url => "/resources/rate/#{@resource.url_slug}"}%>
      <% else %>
        <%= ratings_for @resource, :remote_options => {:url => "/resources/rate/#{@resource.url_slug}"}%>
      <% end %>
    </div>
  </div>
</div>
