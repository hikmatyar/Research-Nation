<%= javascript_include_tag "seller" %>
<div class="content">
  <% unless flash[:success].blank? %><p class="flash"><%= flash[:success] %></p><% end %>
  <% flash[:success] = "" %>
  <div class="content_back">
  	<div class="categories_box">
    	<b><span><%= @resource.industry %></span> <span><%= @resource.geography %></span></b>
    </div>
  	<div class="resource_buttons">
  		<h2><%= @resource.title %></h2>
      <%= link_to 'Purchase', :action => 'payment', :id => @resource.id %>
      <a href="#" data-reveal-id="myModal" id="abc">Send Message</a>
    </div>
    <div class="seller_left">
      <div class="author">
      	<b>By <%= "#{@resource.user.name}" %>, 
      	<span><%= @resource.user.work %> at <%= @resource.user.company %></span>
      	</b>
      	<b>Price: US$<%= @resource.selling_price %></b>
      </div>
      <div class="seller_back">
        <div class="login_tab">
          <%= link_to 'Summary','#', :class => 'sign_up', :id => 'tab1', :onclick => 'showTab("one");' %>
          <%= link_to 'About Seller','#', :class => 'login', :id => 'tab2', :onclick => 'showTab("two");' %>
          <%= (link_to 'View Sample','#', :class => 'login', :id => 'tab3', :onclick => 'showTab("three");') if @sample %>
          <%= (link_to 'Terms and Conditions','#', :class => 'login', :id => 'tab4', :onclick => 'showTab("four");') unless @resource.terms_and_conditions.blank? %>
          <div style="display: block;" class="sign_up_box" id="tabOne">
            <div class="summary">
              <p><%= @resource.description %></p>
            </div>
          </div>  
          <div style="display: none;" class="login_tab_box" id="tabTwo">
            <div class="about_seller">
              <%= @resource.user.about_me %>
            </div>
          </div>
          <div style="display: none;" class="sign_up_box" id="tabThree">
            <div class="view_sample">
              <script type='text/javascript' src='http://www.scribd.com/javascripts/view.js'></script>
							<div id='embedded_flash'><a href="http://www.scribd.com">Scribd</a></div>
							<% unless @sample.blank? %>
							<script type="text/javascript">
								var scribd_doc = scribd.Document.getDoc( <%= @sample.document_id.to_i %>, '<%= @sample.access_key %>' );

								var oniPaperReady = function(e){
								// scribd_doc.api.setPage(3);
								}
								scribd_doc.addParam( 'jsapi_version', 1 );
								scribd_doc.addEventListener( 'iPaperReady', oniPaperReady );
								scribd_doc.write( 'embedded_flash' );
								</script>
								<% end %>
            	</div>
          	</div>
        	</div>
        	<div style="display: none;" class="sign_up_box" id="tabFour">
            <div class="summary">
              <%= @resource.terms_and_conditions %>
          	</div>
        	</div>
      	</div>
      <div class="facebook_back">
        <div class="login_tab">
          <span href="#" onclick="showTab('one');" style="" class="sign_up" id="tab2">Reviews & Comments</span>
          <div style="display: block;" class="sign_up_box" id="tabOne">
            <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=175351785849270&amp;xfbml=1"></script><fb:comments href="http://<%= request.host %>/resources/seller_page/<%= @resource.id %>" num_posts="2" width="500"></fb:comments>
          </div>  
        </div>
      </div>
  	</div>
    <div class="seller_right">
      <div class="koala_review">
        <h2>Koala Review</h2>
        <p></p>
      </div>
      <div class="related_posts">
        <h2>Related Posts</h2>
        <div class="related_posts_box">
          <a href="#"></a>
        </div>
        <div class="related_posts_box">
          <a href="#"></a>
        </div>
        <div class="related_posts_box">
          <a href="#"></a>
        </div>
        <div class="related_posts_box">
          <a href="#"></a>
        </div>
        <div class="related_posts_box">
          <a href="#"></a>
        </div>
        <a href="#">More</a>
      </div>
    </div>
  </div>
</div>

<div id="myModal" class="reveal-modal contact" >
  <div id="form">
			<%= javascript_include_tag :defaults %>
			<div id="message"></div>
			<%= form_remote_tag ( :update => 'message',
          :url => { :controller => 'main', :action => 'send_mail_to_seller', :email => @resource.user.email }, :after => 'jQuery("#reset").trigger("click");' ) %>
      <h2>Contact <%= @resource.user.first_name %></h2>
      <div class="field">
        <label>Name</label>
        <input type="text" name="contact[name]" id="contact_name" class="required" />
      </div>
      <div class="field">
        <label>Email</label>
        <input type="text" name="contact[email]" id="contact_email" class="required" />
      </div>
      <div class="field">
        <label>Subject</label>
        <input type="text" name="contact[subject]" id="contact_subject" class="required" />
      </div>
      <div class="field">
        <label>Message</label>
        <textarea name="contact[message]" rows="8" cols="25" id="contact_message" class="required" /></textarea>
      </div>
      <div class="sign_up_button">
        <%= submit_tag 'Send Message', :id => 'submit' %>
        <input type="reset" id="reset" name="reset" value="Reset" id="" style="display:none;" />
      </div>
  </div>

  <a class="close-reveal-modal">&#215;</a>

</div>

