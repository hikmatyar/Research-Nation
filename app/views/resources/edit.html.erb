<div class="wrapper" id="page">
<h3>Edit the post here</h3>
<% form_for(@resource, :url => {:controller => "resources", :action => "update", :id => @resource.id }) do |f| %>
  <div class="input text">
    <label for = "title">Title</label>
    <%= f.text_field 'title', :class => "firstName overlay" %>

  <div class="input text">
    <label for="selling_price">Selling Price</label>
    <%= f.text_field 'selling_price' %>
  </div>
  <div class="input text">
    <label for="user_email">Description</label>
    <%= f.text_field 'description' %>
  </div>
  <div class="login_buttons">
    <%= f.submit 'Update', :class => "submit_login" %>
<% end %>
</end>
