<% @resources.each do |resource| %>
  <div class="post">
    <% link_to (:action => 'seller_page', :id => resource.id) do %>
    <div class="post_title">
      <%= (image_tag resource.user.profile.picture.picture_path) unless resource.user.profile.blank? %>
      <%= (image_tag "avatar.png") if resource.user.profile.blank? or resource.user.profile.blank?  %>
      <span clas><%= resource.title %></span>
      <p>$<%= resource.selling_price %></p>
    </div>
    <div class="user_name_box">
      <span> <%= resource.user.profile.name %> </span>
    </div>
    <div class="tags_box">
      <span> <%= resource.industry %> </span>
      <span> <%= resource.geography %> </span>
    </div>
    <div class="description">
      <p><%= truncate(resource.description , 230, "...(more)") %></p>
    </div>
  <% end %>
  </div>
<% end %>
