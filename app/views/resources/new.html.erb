<div class="content">
	<div class="content_back">
  	<div class="round_box">
    	<h3>Create a Post</h3>
        <img src="/images/looding_image.jpg" />
        <div class="looding_text">
        	<b>YOUR DETAILS</b>
            <h5>UPLOAD & SELL DOCS</h5>
            <h6>COMPLETE</h6>
        </div>
    	<div class="register_form">
        <h2>1. Your Details </h2>
            <%= form_tag :controller => "resources", :action => "post" %>
                <img src="/images/sample_image.jpg" />
                <i>This is what your post will look like, once completed</i>
                <div class="field">
                    <label>Full Name</label>
                    <%= text_field 'user', "name", :value => "#{@user.name if logged_in? }", :disabled => (logged_in? ? true : false)%>
                </div>
                <div class="field">
                    <label>E-mail</label>
                    <%= text_field 'user', 'email', :disabled => (logged_in? ? true : false) %>
                </div>
                <div class="field">
                    <label>Company*</label>
                    <%= text_field 'user', 'company' %>
                </div>
                <div class="field">
                    <label>Title*</label>
                    <%= text_field 'user', 'work' %>
                </div>
                <div class="field">
                    <label>Website</label>
                    <%= text_field 'user', 'website' %>
                </div>
                <div class="field">
                    <label>Contact*</label>
                    <%= text_field 'user', 'contact' %>
                </div>
                <div class="field">
                    <label>LinkedIn</label>
                    <%= text_field 'user', 'linked_in_profile' %>
                </div>
                <div class="field">
                    <label>About You*</label>
                    <%= text_area 'user', 'about_me' %>
                </div>
        </div>
        <div class="sign_up_button"><%= submit_tag "Proceed to Next Step"%></div>
    </div>
  </div>
</div>

<script type="text/javascript" language="javascript" charset="utf-8">
    $(document).ready(function(){
        var name_validation = new LiveValidation('user_name');
        name_validation.add( Validate.Presence );
        name_validation.add( Validate.Length, { minimum : 2 } );

        var email_validation = new LiveValidation('user_email');
        email_validation.add( Validate.Presence );
        email_validation.add( Validate.Email );

        var company_validation = new LiveValidation('user_company');
        company_validation.add( Validate.Presence );

        var company_validation = new LiveValidation('user_work');
        company_validation.add( Validate.Presence );

        var contact_validation = new LiveValidation('user_contact')
        contact_validation.add( Validate.Presence );

        var about_me_validation = new LiveValidation('user_about_me')
        about_me_validation.add( Validate.Presence );
        about_me_validation.add( Validate.Length, { maximum : 700} )

    });

</script>
