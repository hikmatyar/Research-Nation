<div class="tab_container">
<table border="0" cellspacing="5" cellpadding="5" id="users_table">
  <tbody>
    <tr>
      <th width="20">No.</th>
      <th width="400">Subject</th>
    </tr>
    <% @messages.each_with_index do |msg, index|%>
      <tr>
        <td><%= index+1 %></td>
        <td><%= link_to msg.subject, :controller => 'messages', :action => 'view', :id => msg.id %></td>
        <td ><%= link_to 'Delete', { :controller => 'messages', :action => 'delete', :id => msg.id }, :confirm => "Are you sure you want to delete this post?"  %></td>
      </tr>
    <% end %>
  <tbody>
</table>
</div>
