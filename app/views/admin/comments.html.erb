<div class="tab_container">
<table border="0" cellspacing="5px" cellpadding="5px" id="users_table" >
  <tbody>
    <tr>
      <th width="100">Resource/Profile ID</th>
      <th width="50">Title</th>
      <th> Comment</th>
      <th width="100">User</th>
      <th width="50">Stars</th>
      <th width="120">Date</th>
    </tr>
    <% @comments.each do |comment|%>
      <tr>
        <% if comment.resource.present? %>
          <td><%= link_to comment.resource.id, {:controller => "resources", :action => "seller_page", :url_slug => comment.url_slug} %></td>
        <% else %>
          <td>0</td>
        <% end %>
        <td ><%= comment.title %></td>
        <td><%= link_to comment.comment, edit_comment_path(comment) %></td>
        <td><%= comment.user_name %></td>
        <td><%= comment.stars %></td>
        <td ><%= comment.created_at.strftime("%B %d, %Y") %></td>

        <td ><%= link_to("Delete", {:controller => "comments", :action => "destroy", :id => comment }, :confirm => "Are you sure?", :method => :delete) %></td>
      </tr>
    <% end %>
  <tbody>
  </table>
  <%= will_paginate @comments %>
</div>
