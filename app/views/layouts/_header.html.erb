<div id="header">
  <div id="header_center" class="wrapper">
    <a href="/"><img alt="ResearchNation.net" src="/images/logo.png"></a>
    <div id="siteNav">
      <a href="#">Buy Research</a>
      <a href="/resources/post">Sell Research</a>
      <img alt="Divider" src="/images/divider.png">
      <% unless logged_in? %>
        <%= link_to (image_tag "/images/FB_login_short.gif"), :controller => "users", :action => "facebook_connect" %>
      <% else %>
        Logged in as <%= @user.first_name + " " + @user.last_name %>
        <%= link_to 'Logout' ,:controller => "users", :action => "logout" %>
      <% end %>
    </div>
  </div>
</div>
