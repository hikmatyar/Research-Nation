  </head>
  <body>

    <div id="main">
		<%= render :partial => '/layouts/header'%>
    <div style="float:left;color:green;"><%= flash[:success]%></div>
    <div style="float:left;color:red;"><%= flash[:error]%></div>
    <%= yield %>

		<%= render :partial => '/layouts/footer'%>

      <!-- Feedback popup -->
      <a href="#" id="feedbackLink"></a>
      <div id="feedbackPopup" class="jqmWindow jqmID1">
	<div class="jqmPage page">
	  <a href="#" class="jqmClose"><img alt="close" src="/images/close_button.png"></a>
	  <h3>We <strong>really</strong> value your feedback.  Thanks!</h3>
	  <form action="/feedbacks" class="new_feedback" id="new_feedback" method="post">
	    <div class="shortForm">
	      <div class="input textarea">
		<label for="feedback_message">Questions, comments or concerns?</label>
		<textarea cols="40" id="feedback_message" name="feedback[message]" rows="8" tabindex="5"></textarea>
	      </div>
	      <div class="input text">
		<label for="feedback_email">E-mail Address (optional)</label>
		<input id="feedback_email" name="feedback[email]" size="30" tabindex="6" type="text">
	      </div>
	      <div class="submit">
		<input id="feedback_submit" name="commit" tabindex="7" value="Send" type="submit">
	      </div>
	    </div>
	  </form>
      </div>
    </div>

      <%= render :partail => '/layouts/google_analytics'%>

  </body>
</html>
