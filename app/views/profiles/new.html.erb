<div class="content">
  <div class="content_back">
    <div class="seller_left">
      <div class="seller_back">
        <h3 class="profile_heading">Create a Profile</h3>
        <div class="register_form">
          <h2>1. Profile Type* </h2>
            <div class="field">
              <label>Name</label>
              <select>
                <option>Select one</option>
                <option>Company</option>
                <option>Individual</option>
              </select>
            </div>
        </div>
        <div class="register_form">
          <h2>2. Company Details* </h2>
          <% form_for(@profile , :url => {:controller => "profiles", :action => "create" } ) do |f| %>
            <div class="field">
              <label>Name</label>
              <%= f.text_field 'name', :class => 'required max_len', :max_length => 70 %>
            </div>
            <div class="field">
              <label>Address</label>
              <%= f.text_area 'address', :style => "width:200px; height:60px;", :class => 'required max_len', :max_length => 400 %>
            </div>
            <div class="field">
              <label>Telephone</label>
              <%= f.text_field 'phone_number', :class => 'required' %>
            </div>
            <div class="field">
              <label>Website</label>
              <%= f.text_field 'website', :class => 'required' %>
            </div>
            <div class="field">
              <label>Description</label>
              <%= f.text_area 'description', :class => 'required max_len', :max_length => 1000 %>
            </div>
            <div class="field">
              <label>Competitors</label>
              <%= f.text_field 'competitors', :class => 'max_len', :max_length => 500 %>
            </div>
            <div class="field">
              <label>Expertise Tags</label>
              <%= f.text_field 'expertise', :class => 'required max_len', :max_length => 400 %>
            </div>
        </div>
        <div class="register_form">
          <h2>3. Key Individual*</h2>
            <div class="field">
              <label>Name</label>
              <%= text_field 'key_individual', 'name', :class => 'required' %>
            </div>
            <div class="field">
              <label>Title</label>
              <%= text_field 'key_individual', 'title', :class => 'required' %>
            </div>
            <div class="field">
              <label>E-mail</label>
              <%= text_field 'key_individual', 'email', :class => 'required email' %>
            </div>
            <div class="field">
              <label>Skype ID</label>
              <%= text_field 'key_individual', 'skype_id' , :class => 'required' %>
              <i>
                <input type="checkbox" value="" name="checkbox" checked="checked" />
                <span>Available to Skype chat any time</span>
              </i>
            </div>
            <div class="field">
              <label>Linkedin</label>
              <%= text_field 'key_individual', 'linkedin', :class => 'required' %>
             </div>
        </div>
        <div class="register_form">
          <h2>4. Humor Me</h2>
            <div class="field">
              <label>Optional</label>
              <%= f.text_area 'humor_me', :class => 'max_len', :max_length => 1000 %>
            </div>
        </div>
        <div class="register_form">
          <h2>5. Interested In</h2>
            <div class="field">
              <input type="checkbox" value="" name="checkbox" checked="checked" />
              <label>FT projects</label>
              <input type="checkbox" value="" name="checkbox" checked="checked" />
              <label>PT projects</label>
              <input type="checkbox" value="" name="checkbox" checked="checked" />
              <label>Immediate start</label>
            </div>
            <div class="field">
              <input type="checkbox" value="" name="checkbox" checked="checked" />
              <label>Local only</label>
              <input type="checkbox" value="" name="checkbox" checked="checked" />
              <label style="width:200px;">30 mins free phone consultation</label>
            </div>
          <div class="sign_up_button">
            <%= f.submit 'Submit' %>
          </div>

          <% end %>
        </div>
