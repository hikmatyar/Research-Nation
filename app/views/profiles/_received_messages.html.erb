<table border="0" cellspacing="5" cellpadding="5" id=" posts_table" align="left">
	<tbody id="received_messages">

    <% @user.received_messages.each do |msg|%>
  	<tr>
  	  <td width="50"><%= msg.sender.profile.photo_file_name.blank? ? (image_tag "avatar.png", :width => "32", :height => "32") : (image_tag msg.sender.profile.photo.url(:browse), :width => "32", :height => "32") %></td>
  	  <td width="70" ><span class="fixed">  <%= ((Time.diff Time.now, msg.created_at.to_time)[:day] == 0)? "Today" : "#{(Time.diff Time.now, msg.created_at.to_time)[:day]} days ago"  %></span>
  	  </td>
  	  <td width="250"><%= link_to (truncate(msg.subject, :omission => "...", :length => 41), { :controller => 'messages', :action => 'view', :id => msg.id } , { :class => 'fixed' } ) %></td>
  	  <td width="100" class="user_profile_buttons"><%= link_to image_tag("delete.jpg"), { :controller => 'messages', :action => 'delete', :id => msg.id }, :confirm => "Are you sure you want to delete this post?"  %></td>
  	</tr>
    <% end %>
	<tbody>
</table>
