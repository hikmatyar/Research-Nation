<% content_for :html_title, 'Find, buy and sell market research' %>
<div class="banner">
	<% unless flash[:notice].blank? %><p class="flash"><%= flash[:notice] %></p><% end %>
	<div class="banner_text">
		<h2><b>Market Research, Simplified</b></h2>
      <p>Sign up to quickly create a custom web page for yourself & sell your data & insights. It's exclusive, free, and very easy to use</p>

		<% unless logged_in? %>
			<%= render :partial => 'users/errors' %>
			<% form_for(@user , :url => {:controller => "users", :action => "create" } ) do |f| %>
			<div class="new_field">
				<label style="padding:0px;">Enter your email</label>
				<%= f.text_field 'email', :id => "email", :class => 'required email' %>
			</div>
			<div class="new_field">
			<label style="padding:0px;">Enter your password</label>
				<%= f.password_field 'password', :id => "password", :class => 'required password' %>
			</div>
			<div class="new_field1 new_field ">
			<label style="padding:0px;">I am a</label>
      <div class="field_container">
        <%= render :partial => "/layouts/select_user_type", :locals => {:f => f} %>
      </div>
			</div>
			<div class="banner_sign_up_button" style="margin-left:0px !important;"><%= (f.submit "One Click Sign-up", :class => "green_button")%></div>
			<div class="main_terms_and_conditions">
				<p>By signing up you agree to our </p><%= link_to "Terms of Service ", :controller => "main", :action => "privacy" %><p> and</p> <%= link_to "Privacy Policy", :controller => "main", :action => "privacy" %></div>
			<% end %>
		<% end %>
		<%= link_to ( "Get Started! Create a Post Now", { :controller => "resources", :action => "upload_docs"}, { :class => 'green_button'} ) if logged_in? %>
	</div>
	<%= hidden_field_tag 'create_post', :value => false%>
	<img src="/images/banner.jpg" />
</div>
<div class="facebook_like">
	<iframe src="http://www.facebook.com/plugins/like.php?href=www.researchnation.net&amp;layout=button_count&amp;show_faces=true&amp;width=100&amp;action=like&amp;font&amp;colorscheme=light&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100px; height:21px;" allowTransparency="true"></iframe>
</div>

<div class="content">

</div>

<script type="text/javascript" language="javascript" charset="utf-8">
	$("#new_user").submit(function(){
		return validate_form();
	});
</script>
